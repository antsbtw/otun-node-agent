# OTun Node Agent Configuration
OTUN_API_URL=https://saasapi.situstechnologies.com
NODE_API_KEY=your-node-api-key-here
NODE_ID=node-tokyo-01

# Management mode: local, remote, hybrid
MANAGEMENT_MODE=local

# Server IP (for generating connection URLs)
SERVER_IP=

# Sync intervals (seconds)
SYNC_INTERVAL=60
STATS_INTERVAL=300

# Protocol ports
VLESS_PORT=443
SS_PORT=8388

# sing-box paths
SINGBOX_BIN=/usr/local/bin/sing-box
SINGBOX_CONFIG=/etc/sing-box/config.json

# Logging
LOG_LEVEL=info
