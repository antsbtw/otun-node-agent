# OTun Node Agent Configuration
OTUN_API_URL=https://saasapi.situstechnologies.com
NODE_API_KEY=your-node-api-key-here
NODE_ID=node-tokyo-01

# Management mode: local, remote, hybrid
MANAGEMENT_MODE=local

# Server IP (for generating connection URLs)
SERVER_IP=

# IP whitelist for Local API (comma-separated IPs or domains)
# Supports both IP addresses and domain names
# Domain names are resolved every 5 minutes
# Include all backend services that need to call node API
ALLOWED_IPS=obox-subscription.situstechnologies.com,otun-manager.situstechnologies.com,obox-hosting.situstechnologies.com

# Sync intervals (seconds)
SYNC_INTERVAL=60
STATS_INTERVAL=300

# Protocol ports
VLESS_PORT=443
SS_PORT=8388

# sing-box paths
SINGBOX_BIN=/usr/local/bin/sing-box
SINGBOX_CONFIG=/etc/sing-box/config.json

# Logging
LOG_LEVEL=info
